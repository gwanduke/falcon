{
  "name": "Falcon, the network tracker",
  "description": "This chrome extension collects network requests and you can copy them into test code or json format.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage"],
  "devtools_page": "devtools.html",
  "icons": { "16": "icon16.png", "48": "icon48.png", "128": "icon128.png" },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
